{
  "schemaVersion": 1,
  "id": "limitedlives",
  "version": "${version}",

  "name": "Limited Lives",
  "description": "A tiny mod that limits the number of lives you can have, constantly draining your health, before banning you from the server.",
  "authors": [
    "iChun"
  ],
  "contact": {
    "homepage": "https://github.com/iChun/LimitedLives",
    "issues": "https://github.com/iChun/LimitedLives/issues"
  },

  "license": "GNU Lesser General Public License v3.0",

  "environment": "client",
  "entrypoints": {
    "main": [
      "me.ichun.mods.limitedlives.loader.fabric.LoaderFabric"
    ]
  },

  "mixins": [
    "limitedlives.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.14.11",
    "fabric-api": "*",
    "minecraft": ">=1.19 <=1.19.2",
    "java": ">=17",
    "completeconfig-base": ">=2.1.0"
  }
}
